<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextGeneral">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparentOffWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">3sp</item>
    </style>

    <style name="CheckboxOption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparentOffWhite</item>
        <item name="android:checked">false</item>
    </style>

    <style name="CheckBoxBank">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">false</item>
        <item name="android:onClick">onUpdateBank</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:foregroundGravity">fill_horizontal|center|fill_vertical</item>
        <item name="android:background">@color/transparentWhite</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
